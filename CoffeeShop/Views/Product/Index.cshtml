@model List<ProductViewModel>

<div class="d-flex justify-content-around align-items-center">
    <div class="p-2">
        <h1>Products List</h1>
    </div>
    <div class="p-2">
        <a asp-action="Create" asp-controller="Product" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Product
        </a>
    </div>
</div>
<table class="table table-hover">
    <thead class="table-primary">
        <tr>
            <th>Product Name</th>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-light">
        @foreach (var product in Model.OrderBy(p => p.DisplayOrder))
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Category.CategoryName</td>
                <td>@product.DisplayOrder</td>
                <td>@product.Price</td>
                <td>
                    <div class="text-center">
                        <a asp-action="Edit" asp-controller="Product" asp-route-productId="@product.Id" class="btn btn-success">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-controller="Product" asp-route-productId="@product.Id" class="btn btn-danger">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>