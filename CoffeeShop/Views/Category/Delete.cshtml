@model CategoryViewModel

<h2>Delete Category</h2>
<br />
<form method="post">
    <input asp-for="Id" hidden />
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-7">
            <label asp-for="CategoryName" class="form-label">Category Name</label>
            <input asp-for="CategoryName" class="form-control" disabled />
        </div>
        <div class="col-md-2">
            <label asp-for="DisplayOrder" class="form-label">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" disabled />
        </div>


        <div class="row mt-2">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-danger form-control">
                    <i class="bi bi-trash3"></i> Delete
                </button>
            </div>
            <div class="col-md-2">
                <a asp-controller="Category" asp-action="Index" class="btn btn-primary form-control">
                    Back to list
                </a>
            </div>
        </div>
    </div>
</form>