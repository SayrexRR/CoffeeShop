@model ProductViewModel

<h2>Delete Product</h2>
<br />
<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-9">
            <input asp-for="Id" hidden />
            <div class="col-12 row">
                <div class="col-8 mb-3">
                    <label asp-for="ProductName" class="form-label"></label>
                    <input asp-for="ProductName" disabled class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="col-2 mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" disabled class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="col-10 mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" disabled class="form-control"></textarea>
            </div>
            <div class="col-12 row">
                <div class="col-3 mb-3">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" disabled class="form-select">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="col-1 mb-3">
                    <label asp-for="DisplayOrder" class="form-label"></label>
                    <input asp-for="DisplayOrder" disabled class="form-control" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6 mb-3">
                <label asp-for="ImageUrl" class="form-label"></label>
                <input type="file" disabled name="file" class="form-control" />
            </div>
        </div>
        <div class="col-3">
            <img src="@Model.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
        </div>
    </div>
    <div class="row pt-2">
        <div class="col-2">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
        </div>
        <div class="col-2">
            <a asp-action="Index" asp-controller="Product" class="btn btn-primary form-control">
                Back to List
            </a>
        </div>
    </div>
</form>