@model List<CategoryViewModel>

<div class="row">
    <div class="col-2"></div>
    <div class="col-2">
        <h1>Categories</h1>
    </div>
    <div class="col-6 text-end pt-3">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Category
        </a>
    </div>
</div>

<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <table class="table table-hover">
            <thead class="table-primary">
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-light">
                @foreach (CategoryViewModel category in Model.OrderBy(c => c.DisplayOrder))
                {
                    <tr>
                        <td>@category.CategoryName</td>
                        <td>@category.DisplayOrder</td>
                        <td class="text-end">
                            <div class="btn-group">
                                <a asp-action="Edit" asp-controller="Category" asp-route-categoryId="@category.Id" class="btn btn-primary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-controller="Category" asp-route-categoryId="@category.Id" class="btn btn-danger">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-2"></div>
    </div>
</div>